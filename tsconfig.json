{
  "compilerOptions": {
    "sourceMap": true,
    "target": "es6",
    "outDir": "./dist",
    "baseUrl": "./publisher/src",
    "module": "commonjs",
    "alwaysStrict": true,
    "noImplicitAny": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "suppressImplicitAnyIndexErrors": true,
    "rootDir": ".",
    "allowJs": true,
    "types": ["jest", "node", "reflect-metadata"],
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "include": ["./publisher/src/**/*.ts"],
  "exclude": ["node_modules", "./publisher/src/tests/**/*.ts"]
}
